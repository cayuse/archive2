{
  "name": "Rails 8 (Ruby 3.4) Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/app",
  "remoteUser": "vscode",
  "forwardPorts": [3000, 5432, 6379],
  "containerEnv": {
    "PGHOST": "db",
    "PGUSER": "postgres",
    "PGPASSWORD": "password",
    "PGDATABASE": "archive_development",
    "REDIS_URL": "redis://redis:6379/0"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.ruby",
        "castwide.ruby-debug",
        "wingrunr21.vscode-ruby",
        "ms-vscode.vscode-json",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}

