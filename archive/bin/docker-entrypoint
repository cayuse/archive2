#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Only run DB setup when explicitly requested for deployment
if [ "${RUN_DB_SETUP_ON_START:-false}" = "true" ]; then
  echo "[entrypoint] RUN_DB_SETUP_ON_START=true → rails db:prepare"
  ./bin/rails db:prepare
  if [ "${AUTO_SEED:-false}" = "true" ]; then
    echo "[entrypoint] AUTO_SEED=true → rails db:seed"
    ./bin/rails db:seed || true
  fi
fi

exec "${@}"
