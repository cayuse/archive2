<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Artists</h1>
        <div>
          <span class="badge bg-primary"><%= @artists.total_count %> artists</span>
        </div>
      </div>
      
      <div class="card">
        <div class="card-body">
          <% if @artists.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Country</th>
                    <th>Songs</th>
                    <th>Genres</th>
                    <th>Created</th>
                  </tr>
                </thead>
                <tbody>
                  <% @artists.each do |artist| %>
                    <tr>
                      <td>
                        <%= link_to artist.name, artist_path(artist), class: "text-decoration-none" %>
                      </td>
                      <td>
                        <% if artist.country.present? %>
                          <%= artist.country %>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td>
                        <span class="badge bg-secondary"><%= artist.songs.count %></span>
                      </td>
                      <td>
                        <% artist.genres.limit(3).each do |genre| %>
                          <span class="badge" style="background-color: <%= genre.color %>">
                            <%= genre.name %>
                          </span>
                        <% end %>
                        <% if artist.genres.count > 3 %>
                          <span class="text-muted">+<%= artist.genres.count - 3 %> more</span>
                        <% end %>
                      </td>
                      <td><%= artist.created_at.strftime("%Y-%m-%d") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
            <!-- Pagination -->
            <% if @artists.respond_to?(:current_page) %>
              <div class="d-flex justify-content-center mt-4">
                <%= paginate @artists if respond_to?(:paginate) %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <p class="text-muted">No artists found.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 