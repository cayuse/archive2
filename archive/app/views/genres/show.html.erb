<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
          <span class="badge" style="background-color: <%= @genre.color %>">
            <%= @genre.name %>
          </span>
        </h1>
        <div>
          <%= link_to "Back to Genres", genres_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
      
      <!-- Genre Info -->
      <div class="row">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Genre Information</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8"><%= @genre.name %></dd>
                    
                    <dt class="col-sm-4">Color:</dt>
                    <dd class="col-sm-8">
                      <% if @genre.color.present? %>
                        <span class="badge" style="background-color: <%= @genre.color %>">
                          <%= @genre.color %>
                        </span>
                      <% else %>
                        <span class="text-muted">Not set</span>
                      <% end %>
                    </dd>
                    
                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">
                      <% if @genre.description.present? %>
                        <%= @genre.description %>
                      <% else %>
                        <span class="text-muted">No description</span>
                      <% end %>
                    </dd>
                  </dl>
                </div>
                
                <div class="col-md-6">
                  <dl class="row">
                    <dt class="col-sm-4">Songs:</dt>
                    <dd class="col-sm-8">
                      <span class="badge bg-primary"><%= @genre.songs.count %></span>
                    </dd>
                    
                    <dt class="col-sm-4">Artists:</dt>
                    <dd class="col-sm-8">
                      <span class="badge bg-info"><%= @genre.artists.count %></span>
                    </dd>
                    
                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8"><%= @genre.created_at.strftime("%Y-%m-%d") %></dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Statistics</h5>
            </div>
            <div class="card-body">
              <dl class="row">
                <dt class="col-sm-6">Total Songs:</dt>
                <dd class="col-sm-6"><%= @genre.songs.count %></dd>
                
                <dt class="col-sm-6">Artists:</dt>
                <dd class="col-sm-6"><%= @genre.artists.count %></dd>
                
                <dt class="col-sm-6">Created:</dt>
                <dd class="col-sm-6"><%= @genre.created_at.strftime("%Y-%m-%d") %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Songs -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0"><%= @genre.name %> Songs</h5>
        </div>
        <div class="card-body">
          <% if @songs.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Album</th>
                    <th>Duration</th>
                    <th>Created</th>
                  </tr>
                </thead>
                <tbody>
                  <% @songs.each do |song| %>
                    <tr>
                      <td>
                        <%= link_to song.title, song_path(song), class: "text-decoration-none" %>
                      </td>
                      <td>
                        <% if song.artist.present? %>
                          <%= song.artist.name %>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td>
                        <% if song.album.present? %>
                          <%= song.album.title %>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td>
                        <% if song.duration.present? %>
                          <%= "#{song.duration / 60}:#{song.duration % 60}" %>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td><%= song.created_at.strftime("%Y-%m-%d") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <p class="text-muted">No songs found for this genre.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 