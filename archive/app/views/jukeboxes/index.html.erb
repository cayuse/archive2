<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 theme-text-primary">ðŸŽµ My Jukeboxes</h1>
        <div>
          <%= link_to "New Jukebox", new_jukebox_path, class: "btn btn-primary" %>
          <%= link_to "Back to Settings", settings_path, class: "btn btn-outline-secondary ms-2" %>
        </div>
      </div>

      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if @jukeboxes.any? %>
        <div class="row">
          <%= render @jukeboxes %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-music fa-3x text-muted mb-3"></i>
          <h4 class="theme-text-primary">No jukeboxes yet</h4>
          <p class="theme-text-secondary">Create your first jukebox to start hosting music parties!</p>
          <%= link_to "Create Your First Jukebox", new_jukebox_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
