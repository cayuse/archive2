<% if query.present? %>
  <div class="search-results">
    <!-- Results Summary -->
    <div class="alert alert-info">
      <strong>Search Results for "<%= query %>"</strong>
      <% if type == 'all' %>
        <% total = total_songs + total_artists + total_genres %>
        Found <%= total %> results
        <% if total_songs > 0 %>(<%= total_songs %> songs<% end %>
        <% if total_artists > 0 %>, <%= total_artists %> artists<% end %>
        <% if total_genres > 0 %>, <%= total_genres %> genres<% end %>
        )
      <% elsif type == 'songs' %>
        Found <%= total_songs %> songs
      <% elsif type == 'artists' %>
        Found <%= total_artists %> artists
      <% elsif type == 'genres' %>
        Found <%= total_genres %> genres
      <% end %>
    </div>

    <!-- Songs Results -->
    <% if (type == 'all' || type == 'songs') && songs.any? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Songs (<%= total_songs %>)</h5>
        </div>
        <div class="list-group list-group-flush">
          <% songs.each do |song| %>
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-1"><%= song.title %></h6>
                  <small class="text-muted">
                    <%= song.artist&.name %> • <%= song.genre&.name %> • <%= song.album&.title %>
                  </small>
                </div>
                <div class="btn-group" role="group">
                  <%= link_to "View", song_path(song), class: "btn btn-outline-primary btn-sm" %>
                  <% if song.audio_file.attached? %>
                    <%= link_to "Play", song_path(song), class: "btn btn-outline-success btn-sm" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Artists Results -->
    <% if (type == 'all' || type == 'artists') && artists.any? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Artists (<%= total_artists %>)</h5>
        </div>
        <div class="list-group list-group-flush">
          <% artists.each do |artist| %>
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-1"><%= artist.name %></h6>
                  <small class="text-muted">
                    <%= artist.country %> • <%= artist.formed_year %> • <%= artist.album_count %> albums
                  </small>
                </div>
                <div class="btn-group" role="group">
                  <%= link_to "View", artist_path(artist), class: "btn btn-outline-primary btn-sm" %>
                  <%= link_to "Albums", artist_path(artist), class: "btn btn-outline-info btn-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Genres Results -->
    <% if (type == 'all' || type == 'genres') && genres.any? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Genres (<%= total_genres %>)</h5>
        </div>
        <div class="list-group list-group-flush">
          <% genres.each do |genre| %>
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-1">
                    <span class="badge" style="background-color: <%= genre.color_or_default %>;">
                      <%= genre.name %>
                    </span>
                  </h6>
                  <small class="text-muted">
                    <%= genre.song_count %> songs • <%= genre.artist_count %> artists • <%= genre.album_count %> albums
                  </small>
                </div>
                <div class="btn-group" role="group">
                  <%= link_to "View", genre_path(genre), class: "btn btn-outline-primary btn-sm" %>
                  <%= link_to "Songs", genre_path(genre), class: "btn btn-outline-info btn-sm" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- No Results -->
    <% if songs.empty? && artists.empty? && genres.empty? %>
      <div class="alert alert-warning">
        <h5>No results found for "<%= query %>"</h5>
        <p class="mb-0">Try different keywords or check your spelling.</p>
      </div>
    <% end %>

    <!-- Infinite Scroll Trigger -->
    <% if (songs.any? || artists.any? || genres.any?) && (page * 20) < (total_songs + total_artists + total_genres) %>
      <div hx-get="/search?q=<%= query %>&type=<%= type %>&page=<%= page + 1 %>"
           hx-trigger="intersect once"
           hx-swap="beforeend"
           hx-target=".search-results"
           class="text-center py-3">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading more results...</span>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <!-- Search Instructions -->
  <div class="card">
    <div class="card-body text-center">
      <h5 class="card-title">Search Music Archive</h5>
      <p class="card-text">
        Enter keywords to search for songs, artists, and genres.<br>
        Use the dropdown to filter by specific types.
      </p>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="input-group">
            <span class="input-group-text">
              <i class="bi bi-search"></i>
            </span>
            <input type="text" 
                   class="form-control"
                   placeholder="Start typing to search..."
                   disabled>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 