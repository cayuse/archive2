<tr data-playlist-id="<%= playlist.id %>">
  <td>
    <%= link_to playlist.name, playlist_path(playlist), class: "playlist-name text-decoration-none" %>
  </td>
  <td>
    <span class="playlist-owner"><%= playlist.user.name %></span>
  </td>
  <td>
    <span class="playlist-song-count badge bg-secondary"><%= playlist.song_count %></span>
  </td>
  <td>
    <% if playlist.public? %>
      <span class="badge bg-success playlist-visibility">Public</span>
    <% else %>
      <span class="badge bg-warning playlist-visibility">Private</span>
    <% end %>
  </td>
  <td><span class="playlist-date"><%= playlist.created_at.strftime("%Y-%m-%d") %></span></td>
  <td>
    <% if playlist.owned_by?(current_user) %>
      <button class="btn btn-sm btn-outline-primary rename-playlist-btn" 
              data-playlist-id="<%= playlist.id %>" 
              data-playlist-name="<%= playlist.name %>"
              data-bs-toggle="modal" 
              data-bs-target="#renamePlaylistModal">
        <i class="fas fa-edit"></i> Rename
      </button>
    <% else %>
      <span class="text-muted">-</span>
    <% end %>
  </td>
</tr> 