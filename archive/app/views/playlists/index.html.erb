<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Playlists</h1>
        <div>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPlaylistModal">
            <i class="fas fa-plus me-2"></i>New Playlist
          </button>
        </div>
      </div>
      
      <!-- Tab Navigation -->
      <ul class="nav nav-tabs mb-4" id="playlistTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="your-playlists-tab" data-bs-toggle="tab" data-bs-target="#your-playlists" type="button" role="tab" aria-controls="your-playlists" aria-selected="true">
            Your Playlists
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="shared-playlists-tab" data-bs-toggle="tab" data-bs-target="#shared-playlists" type="button" role="tab" aria-controls="shared-playlists" aria-selected="false">
            Shared Playlists
          </button>
        </li>
      </ul>
      
      <!-- Tab Content -->
      <div class="tab-content" id="playlistTabsContent">
        <!-- Your Playlists Tab -->
        <div class="tab-pane fade show active" id="your-playlists" role="tabpanel" aria-labelledby="your-playlists-tab">
          <div class="card">
            <div class="card-body">
              <% if @user_playlists.any? %>
                <div class="table-responsive">
                  <table class="table table-hover playlist-list-table">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Owner</th>
                        <th>Songs</th>
                        <th>Visibility</th>
                        <th>Created</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%= render partial: 'playlist', collection: @user_playlists %>
                    </tbody>
                  </table>
                </div>
                
                <!-- Pagination -->
                <% if @user_playlists.respond_to?(:current_page) %>
                  <div class="d-flex justify-content-center mt-4">
                    <%= paginate @user_playlists if respond_to?(:paginate) %>
                  </div>
                <% end %>
              <% else %>
                <div class="text-center py-4">
                  <p class="theme-text-muted">You haven't created any playlists yet.</p>
                  <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPlaylistModal">
                    <i class="fas fa-plus me-2"></i>Create Your First Playlist
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Shared Playlists Tab -->
        <div class="tab-pane fade" id="shared-playlists" role="tabpanel" aria-labelledby="shared-playlists-tab">
          <div class="card">
            <div class="card-body">
              <% if @shared_playlists.any? %>
                <div class="table-responsive">
                  <table class="table table-hover playlist-list-table">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Owner</th>
                        <th>Songs</th>
                        <th>Visibility</th>
                        <th>Created</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%= render partial: 'playlist', collection: @shared_playlists %>
                    </tbody>
                  </table>
                </div>
                
                <!-- Pagination -->
                <% if @shared_playlists.respond_to?(:current_page) %>
                  <div class="d-flex justify-content-center mt-4">
                    <%= paginate @shared_playlists if respond_to?(:paginate) %>
                  </div>
                <% end %>
              <% else %>
                <div class="text-center py-4">
                  <p class="theme-text-muted">No shared playlists found.</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- New Playlist Modal -->
<div class="modal fade" id="newPlaylistModal" tabindex="-1" aria-labelledby="newPlaylistModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPlaylistModalLabel">Create New Playlist</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with model: Playlist.new, local: true, class: "new-playlist-form" do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :name, "Playlist Name", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter playlist name", required: true %>
          </div>
          <div class="mb-3">
            <div class="form-check">
              <%= form.check_box :is_public, class: "form-check-input" %>
              <%= form.label :is_public, "Make this playlist public", class: "form-check-label" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit "Create Playlist", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Rename Playlist Modal -->
<div class="modal fade" id="renamePlaylistModal" tabindex="-1" aria-labelledby="renamePlaylistModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="renamePlaylistModalLabel">Rename Playlist</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: "#", method: :patch, local: true, class: "rename-playlist-form", id: "renamePlaylistForm" do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :name, "New Playlist Name", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter new playlist name", required: true, id: "renamePlaylistName" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit "Rename Playlist", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let isSubmitting = false; // Prevent multiple submissions
  
  // Handle rename button clicks
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('rename-playlist-btn')) {
      const playlistId = e.target.dataset.playlistId;
      const playlistName = e.target.dataset.playlistName;
      
      // Update the form action and populate the name field
      const form = document.getElementById('renamePlaylistForm');
      form.action = `/playlists/${playlistId}`;
      document.getElementById('renamePlaylistName').value = playlistName;
    }
  });

  // Handle rename form submission
  document.getElementById('renamePlaylistForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    if (isSubmitting) return; // Prevent multiple submissions
    isSubmitting = true;
    
    const form = e.target;
    const playlistName = document.getElementById('renamePlaylistName').value.trim();
    
    if (!playlistName) {
      alert('Please enter a playlist name');
      isSubmitting = false;
      return;
    }
    
    const playlistId = form.action.split('/').pop();
    
    // Add loading state
    const submitBtn = form.querySelector('input[type="submit"]');
    const originalText = submitBtn.value;
    submitBtn.value = 'Renaming...';
    submitBtn.disabled = true;
    
    fetch(form.action, {
      method: 'PATCH',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Content-Type': 'application/json',
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      },
      body: JSON.stringify({
        playlist: {
          name: playlistName
        }
      })
    })
    .then(response => {
      if (!response.ok) {
        throw new Error(`HTTP ${response.status}`);
      }
      return response.json();
    })
    .then(data => {
      if (data.success) {
        // Update the playlist name in the table
        const playlistRow = document.querySelector(`tr[data-playlist-id="${playlistId}"]`);
        const nameCell = playlistRow.querySelector('.playlist-name');
        nameCell.textContent = playlistName;
        
        // Close the modal
        const modal = bootstrap.Modal.getInstance(document.getElementById('renamePlaylistModal'));
        modal.hide();
        
        // No more popup - the table update is enough feedback
      } else {
        alert('Error: ' + (data.error || 'Failed to rename playlist'));
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error: Failed to rename playlist');
    })
    .finally(() => {
      // Reset form state
      isSubmitting = false;
      submitBtn.value = originalText;
      submitBtn.disabled = false;
    });
  });
});
</script> 