<div class="row">
  <div class="col-md-8">
    <h4 class="theme-text-primary mb-3">General Settings</h4>
    
    <%= form_with url: settings_path, method: :patch, local: true, class: "settings-form" do |form| %>
      <%= form.hidden_field :tab, value: 'general' %>
      
      <div class="mb-3">
        <%= form.label :site_name, "Site Name", class: "form-label" %>
        <%= form.text_field :site_name, value: @site_name, class: "form-control" %>
        <small class="theme-form-help">The name displayed in the navigation bar and browser title.</small>
      </div>
      
      <div class="mb-3">
        <%= form.label :site_description, "Site Description", class: "form-label" %>
        <%= form.text_area :site_description, value: @site_description, class: "form-control", rows: 3 %>
        <small class="theme-form-help">A brief description of your music archive for SEO purposes.</small>
      </div>
      
      <div class="d-flex gap-2">
        <%= form.submit "Save Settings", class: "btn btn-primary" %>
        <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0 theme-text-primary">Current Settings</h6>
      </div>
      <div class="card-body theme-card-content">
        <dl class="row">
          <dt class="col-sm-4 theme-text-primary">Site Name:</dt>
          <dd class="col-sm-8 theme-text-primary"><%= @site_name %></dd>
          
          <dt class="col-sm-4 theme-text-primary">Theme:</dt>
          <dd class="col-sm-8 theme-text-primary"><%= SystemSetting.current_theme %></dd>
          
          <dt class="col-sm-4 theme-text-primary">Songs:</dt>
          <dd class="col-sm-8 theme-text-primary"><%= Song.count %></dd>
          
          <dt class="col-sm-4 theme-text-primary">Users:</dt>
          <dd class="col-sm-8 theme-text-primary"><%= User.count %></dd>
        </dl>
      </div>
    </div>
  </div>
</div> 