<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 theme-text-primary">System Settings</h1>
        <div>
          <%= link_to "Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>

      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <!-- Settings Content -->
      <div class="card settings-card">
        <div class="card-body">
          <div class="settings-content">
              <div class="row">
                <div class="col-md-8">
                  <h4 class="theme-text-primary mb-3">Welcome to System Settings</h4>
                  <p class="theme-text-secondary">
                    Configure your music archive settings and customize the interface.
                  </p>
                  
                  <div class="row mt-4">
                    <div class="col-md-4">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-cog me-2"></i>General
                          </h6>
                          <p class="theme-text-secondary small">
                            Configure site name, description, and basic settings.
                          </p>
                          <%= link_to "Go to General", general_settings_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-md-4">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-palette me-2"></i>Theme
                          </h6>
                          <p class="theme-text-secondary small">
                            Select and customize the visual theme for your music archive.
                          </p>
                          <%= link_to "Go to Theme", manage_themes_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-md-4">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            ðŸŽµ Jukebox
                          </h6>
                          <p class="theme-text-secondary small">
                            Manage Archive Jukebox parties and player sessions.
                          </p>
                          <%= link_to "Go to Jukeboxes", jukeboxes_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
                
                <div class="col-md-4">
                  <div class="card">
                    <div class="card-header">
                      <h6 class="mb-0 theme-text-primary">Quick Stats</h6>
                    </div>
                    <div class="card-body theme-card-content">
                      <dl class="row">
                        <dt class="col-sm-6 theme-text-primary">Current Theme:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= SystemSetting.current_theme.titleize %></dd>
                        
                        <dt class="col-sm-6 theme-text-primary">Site Name:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= SystemSetting.site_name %></dd>
                        
                        <dt class="col-sm-6 theme-text-primary">Total Songs:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= Song.count %></dd>
                        
                        <dt class="col-sm-6 theme-text-primary">Total Users:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= User.count %></dd>
                      </dl>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>