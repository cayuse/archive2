<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 theme-text-primary">System Settings</h1>
        <div>
          <%= link_to "Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>

      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <!-- Settings Tabs -->
      <div class="card settings-card">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs settings-tabs" id="settingsTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <%= link_to "General", general_settings_path, 
                  class: "nav-link #{@current_tab == 'general' ? 'active' : ''}",
                  data: { bs_toggle: "tab" } %>
            </li>
            <li class="nav-item" role="presentation">
              <%= link_to "Theme", manage_themes_settings_path, 
                  class: "nav-link #{@current_tab == 'theme' ? 'active' : ''}",
                  data: { bs_toggle: "tab" } %>
            </li>
            <li class="nav-item" role="presentation">
              <%= link_to "API Keys", api_keys_settings_path, 
                  class: "nav-link #{@current_tab == 'api_keys' ? 'active' : ''}",
                  data: { bs_toggle: "tab" } %>
            </li>
            <li class="nav-item" role="presentation">
              <%= link_to "Song Types", song_types_settings_path, 
                  class: "nav-link #{@current_tab == 'song_types' ? 'active' : ''}",
                  data: { bs_toggle: "tab" } %>
            </li>
            <li class="nav-item" role="presentation">
              <%= link_to "Archive Sync", archive_sync_settings_path, 
                  class: "nav-link #{@current_tab == 'archive_sync' ? 'active' : ''}",
                  data: { bs_toggle: "tab" } %>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <div class="tab-content settings-tabs" id="settingsTabContent">
            <!-- Welcome content for the main settings page -->
            <div class="tab-pane fade show active" id="welcome" role="tabpanel">
              <div class="row">
                <div class="col-md-8">
                  <h4 class="theme-text-primary mb-3">Welcome to System Settings</h4>
                  <p class="theme-text-secondary">
                    Use the tabs above to navigate between different settings sections:
                  </p>
                  
                  <div class="row mt-4">
                    <div class="col-md-6">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-cog me-2"></i>General
                          </h6>
                          <p class="theme-text-secondary small">
                            Configure site name, description, and basic settings.
                          </p>
                          <%= link_to "Go to General", general_settings_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-md-6">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-palette me-2"></i>Theme
                          </h6>
                          <p class="theme-text-secondary small">
                            Select and customize the visual theme for your music archive.
                          </p>
                          <%= link_to "Go to Theme", manage_themes_settings_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row mt-3">
                    <div class="col-md-6">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-key me-2"></i>API Keys
                          </h6>
                          <p class="theme-text-secondary small">
                            Manage API keys for external integrations (coming soon).
                          </p>
                          <%= link_to "Go to API Keys", api_keys_settings_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-md-6">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-music me-2"></i>Song Types
                          </h6>
                          <p class="theme-text-secondary small">
                            Configure song type categories and metadata (coming soon).
                          </p>
                          <%= link_to "Go to Song Types", song_types_settings_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row mt-3">
                    <div class="col-md-6">
                      <div class="card h-100">
                        <div class="card-body">
                          <h6 class="theme-text-primary">
                            <i class="fas fa-sync me-2"></i>Archive Sync
                          </h6>
                          <p class="theme-text-secondary small">
                            Configure archive-to-archive synchronization and master-slave relationships.
                          </p>
                          <%= link_to "Go to Archive Sync", archive_sync_settings_path, class: "btn btn-sm btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="col-md-4">
                  <div class="card">
                    <div class="card-header">
                      <h6 class="mb-0 theme-text-primary">Quick Stats</h6>
                    </div>
                    <div class="card-body theme-card-content">
                      <dl class="row">
                        <dt class="col-sm-6 theme-text-primary">Current Theme:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= SystemSetting.current_theme.titleize %></dd>
                        
                        <dt class="col-sm-6 theme-text-primary">Site Name:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= SystemSetting.site_name %></dd>
                        
                        <dt class="col-sm-6 theme-text-primary">Total Songs:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= Song.count %></dd>
                        
                        <dt class="col-sm-6 theme-text-primary">Total Users:</dt>
                        <dd class="col-sm-6 theme-text-primary"><%= User.count %></dd>
                      </dl>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 