source "https://rubygems.org"

ruby "3.3.8"

# Rails framework
gem "rails", "~> 8.0.2"
gem "bootsnap", require: false
gem "importmap-rails"
gem "sprockets-rails"
gem "turbo-rails"

# Server gems
gem "puma"
gem "webrick", platforms: [:ruby]

# Database
gem "pg", "~> 1.1"

# PowerSync for real-time database synchronization
gem "powersync-rails", "~> 0.1"

# Authentication
gem "bcrypt", "~> 3.1.7"

# Authorization
gem "pundit"

# File uploads
gem "image_processing", "~> 1.2"

# Audio metadata reading
gem "wahwah", "~> 1.6"

# Background job processing for large file uploads
gem "sidekiq", "~> 7.0"

# HTTP client for external API calls
gem "httparty", "~> 0.21.0"

# CSV processing for bulk operations
gem "csv", "~> 3.2"

# JSON processing
gem "json", "~> 2.6"

# Pagination
gem "kaminari", "~> 1.2"

# Email delivery
gem "sendgrid-ruby", "~> 6.0"

# Development and test gems
group :development, :test do
  gem "debug", platforms: %i[ mri mingw x64_mingw ]
  gem "brakeman", require: false
  gem "rubocop", require: false
  gem "letter_opener", "~> 1.8"
end

group :development do
  gem "web-console"
end

group :test do
  gem "capybara"
  gem "selenium-webdriver"
  gem "webdrivers"
end
