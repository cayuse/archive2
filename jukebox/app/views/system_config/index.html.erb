<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">⚙️ System Configuration</h1>
      
      <div class="row">
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-random me-2"></i>
                Random Source Playlists
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                Choose which Archive playlists power the random pool used for playback.
              </p>
              <%= link_to "Select Random Sources", system_random_sources_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-music me-2"></i>
                Player Controls
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                Open the player controller to Play/Pause/Stop/Skip.
              </p>
              <%= link_to "Open Player Controls", system_player_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-palette me-2"></i>
                Theme Configuration
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                <strong>Current Theme:</strong> <%= @current_theme %>
              </p>
              <p class="card-text">
                <strong>Available Themes:</strong> <%= @available_themes.join(', ') %>
              </p>
              <%= link_to "Manage Themes", system_themes_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-cog me-2"></i>
                Site Settings
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                <strong>Site Name:</strong> <%= @site_name %>
              </p>
              <p class="card-text">
                <strong>Site Description:</strong> <%= @site_description %>
              </p>
              <%= link_to "Manage Settings", system_settings_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-database me-2"></i>
                System Status
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                <strong>Total Songs:</strong> <%= Song.count %>
              </p>
              <p class="card-text">
                <strong>Cached Songs:</strong> <%= JukeboxCachedSong.count %>
              </p>
              <p class="card-text">
                <strong>Queue Length:</strong> <%= JukeboxQueueItem.count %>
              </p>
              <%= link_to "View Admin Dashboard", admin_path, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
        
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">
                <i class="fas fa-sync me-2"></i>
                Sync Status
              </h5>
            </div>
            <div class="card-body">
              <p class="card-text">
                <strong>Last Sync:</strong> 
                <% if PowerSyncService.instance.sync_status[:last_sync] %>
                  <%= PowerSyncService.instance.sync_status[:last_sync].strftime("%Y-%m-%d %H:%M:%S") %>
                <% else %>
                  Never
                <% end %>
              </p>
              <p class="card-text">
                <strong>Sync Status:</strong> 
                <span class="badge bg-<%= PowerSyncService.instance.sync_status[:status] == 'synced' ? 'success' : 'warning' %>">
                  <%= PowerSyncService.instance.sync_status[:status]&.titleize || 'Unknown' %>
                </span>
              </p>
              <%= link_to "View Sync Details", sync_path, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
