<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">ðŸŽµ Live Jukebox</h1>
      
      <!-- Current Song -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-play-circle me-2"></i>
            Now Playing
          </h5>
        </div>
        <div class="card-body">
          <% if @current_song %>
            <div class="row align-items-center">
              <div class="col-md-8">
                <h4 class="mb-1"><%= @current_song.title %></h4>
                <p class="text-muted mb-2">
                  <i class="fas fa-user me-1"></i>
                  <%= @current_song.artist&.name || 'Unknown Artist' %>
                </p>
                <% if @current_song.album %>
                  <p class="text-muted mb-0">
                    <i class="fas fa-compact-disc me-1"></i>
                    <%= @current_song.album.title %>
                  </p>
                <% end %>
              </div>
              <div class="col-md-4 text-end">
                <div class="text-muted">
                  <small>Player controls available to logged-in users at <a href="/system/player">/system/player</a></small>
                </div>
              </div>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-music fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No song currently playing</h5>
              <p class="text-muted">Add songs to the queue to start playing</p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Upcoming Songs -->
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Upcoming Songs
          </h5>
          <span class="badge bg-primary"><%= @upcoming_songs.length %> songs</span>
        </div>
        <div class="card-body">
          <% if @upcoming_songs.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th style="width: 50px;">#</th>
                    <th>Song</th>
                    <th>Artist</th>
                    <th>Album</th>
                    <th style="width: 100px;">Source</th>
                  </tr>
                </thead>
                <tbody>
                  <% @upcoming_songs.each_with_index do |item, index| %>
                    <tr>
                      <td>
                        <span class="badge bg-secondary"><%= index + 1 %></span>
                      </td>
                      <td>
                        <strong><%= item[:song].title %></strong>
                        <% if item[:song].duration %>
                          <br><small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            <%= format_duration(item[:song].duration) %>
                          </small>
                        <% end %>
                      </td>
                      <td>
                        <% if item[:song].artist %>
                          <%= link_to item[:song].artist.name, artist_path(item[:song].artist), class: "text-decoration-none" %>
                        <% else %>
                          <span class="text-muted">Unknown Artist</span>
                        <% end %>
                      </td>
                      <td>
                        <% if item[:song].album %>
                          <%= link_to item[:song].album.title, album_path(item[:song].album), class: "text-decoration-none" %>
                        <% else %>
                          <span class="text-muted">Unknown Album</span>
                        <% end %>
                      </td>
                      <td>
                        <span class="badge <%= item[:source] == 'random' ? 'bg-success' : 'bg-info' %>">
                          <%= item[:source].titleize %>
                        </span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-list fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No upcoming songs</h5>
              <p class="text-muted">Add songs to the queue to see upcoming tracks</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 