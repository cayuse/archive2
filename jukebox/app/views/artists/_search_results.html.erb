<% if artists.any? %>
  <div class="list-group">
    <% artists.each do |artist| %>
      <button type="button" 
              class="list-group-item list-group-item-action"
              onclick="selectArtist('<%= artist.id %>', '<%= j(artist.name) %>')">
        <strong><%= artist.name %></strong>
        <% if artist.country.present? %>
          <br><small class="theme-text-muted"><%= artist.country %></small>
        <% end %>
      </button>
    <% end %>
  </div>
<% else %>
  <div class="theme-text-muted">
    <small>No artists found. <a href="#" onclick="createNewArtist()">Create new artist</a></small>
  </div>
<% end %> 