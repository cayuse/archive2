<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="h3 mb-3"><%= @playlist.display_name %></h1>
      <p class="text-muted">Songs: <%= @playlist.song_count %></p>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Album</th>
          </tr>
        </thead>
        <tbody>
          <% @songs.each do |song| %>
            <tr>
              <td><%= link_to song.title, song_path(song) %></td>
              <td><%= song.artist&.name %></td>
              <td><%= song.album&.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

